@model IEnumerable<TECHNOVA.ViewModels.MenuVM>

@{
    var iconMap = new Dictionary<string, string>
    {
        { "Laptops", "fa-laptop" },
        { "Smartphones", "fa-mobile-alt" },
        { "Tablets", "fa-tablet-alt" },
        { "Accessories", "fa-plug" },
        { "Headphones", "fa-headphones" },
        { "Cameras", "fa-camera" },
        { "Smartwatches", "fa-clock" },
        { "Printers", "fa-print" },
        { "Monitors", "fa-desktop" },
        { "Gaming", "fa-gamepad" },
        { "Default", "fa-cogs" } // fallback nếu không khớp
    };
}


<div class="sidebar-widget category">
    <h2 class="title">Category</h2>
    <nav class="navbar bg-light">
        <ul class="navbar-nav">
            @foreach (var item in Model)
            {
                var iconClass = iconMap.ContainsKey(item.categoryName) ? iconMap[item.categoryName] : iconMap["Default"];
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Item" asp-action="Index" asp-route-categoryId="@item.categoryID"><i class="fa @iconClass"></i> @item.categoryName</a>
                </li>
            }

        </ul>
    </nav>
</div>