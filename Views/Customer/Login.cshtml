@model TECHNOVA.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}
<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Item" asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active">Login</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->

<div class="text-center">
    <h1 class="mb-4">Login</h1>
</div>

<div class="login">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Tăng kích thước form tại đây -->
                <form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="login-form border rounded p-4 shadow">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.UsernameOrEmail" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.UsernameOrEmail" class="form-control" placeholder="Username/E-mail">
                                <span asp-validation-for="@Model.UsernameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="@Model.password" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.password" class="form-control" placeholder="Password">
                                <span asp-validation-for="@Model.password" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 text-center mt-3">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="RememberMe" class="custom-control-input" id="RememberMe" />
                                    <label class="custom-control-label" for="RememberMe">Keep me signed in</label>

                                </div>
                            </div>
                            <div class="col-md-12 d-flex justify-content-center mt-3">
                                <button type="submit" class="btn btn-primary px-4">Submit</button>
                            </div>

                            <div class="col-md-12 text-center mt-4">
                                <p>Or sign in with:</p>
                                <a asp-controller="Customer" asp-action="LoginGoogle" class="btn btn-outline-danger me-2">
                                    <i class="fab fa-google me-1"></i> Google
                                </a>
                                <a asp-controller="Customer" asp-action="LoginFacebook" class="btn btn-outline-primary">
                                    <i class="fab fa-facebook-f me-1"></i> Facebook
                                </a>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
