@model IEnumerable<TECHNOVA.ViewModels.ItemVM>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 d-flex mb-4">
            <div class="product-item w-100 d-flex flex-column">
                <div class="product-title">
                    <a asp-action="Detail" asp-controller="Item" asp-route-id="@item.productID">@item.productName</a>
                    <div class="ratting">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                </div>
                <div class="product-image">
                    <a asp-action="Detail" asp-controller="Item" asp-route-id ="@item.productID">
                        <img src="@item.image" alt="@item.productName">
                    </a>
                    <div class="product-action">
                        <a asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@item.productID"><i class="fa fa-cart-plus"></i></a>
                        <a href="#"><i class="fa fa-heart"></i></a>
                        <a asp-action="Detail" asp-controller="Item" asp-route-id="@item.productID"><i class="fa fa-search"></i></a>
                    </div>
                </div>
                <div class="product-price mt-auto">
                    <h3><span>$</span>@item.price</h3>
                    <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Buy Now</a>
                </div>
            </div>
        </div>
    }
</div>


<style>
    .product-item {
        display: flex;
        flex-direction: column;
        border: 1px solid #eee;
        padding: 10px;
        height: 100%;
        background-color: #fff;
    }

    .product-image img {
        width: 100%;
        height: 200px;
        object-fit: contain; /* Hoặc contain nếu muốn giữ toàn ảnh */
    }

    .product-title a {
        display: block;
        min-height: 40px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .product-price {
        margin-top: auto; /* Đẩy vùng giá xuống dưới */
    }

</style>






